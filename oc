- name: Set group ownership and permissions on /home/{{ tower_user_name }}/ai-eng
  delegate_to: "{{ item }}"
  file:
    path: "/home/{{ tower_user_name }}/ai-eng"
    state: directory
    owner: "{{ tower_user_name }}"
    group: "ai-eng-group"     # Replace with your actual group
    mode: "0770"              # rwx for owner & group, no access for others
