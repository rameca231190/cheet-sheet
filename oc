mkdir -p /tmp/stunnel-5.71-2.el8_10.x86_64

rpm -ql stunnel

for file in $(rpm -ql stunnel); do
  # Check if it's a directory or a file and copy accordingly
  if [ -d "$file" ]; then
    mkdir -p /tmp/stunnel-5.71-2.el8_10.x86_64${file}
  elif [ -f "$file" ]; then
    cp -p --parents "$file" /tmp/stunnel-5.71-2.el8_10.x86_64
  fi
done


tar -czvf /tmp/stunnel-5.71-2.el8_10.x86_64.tar.gz -C /tmp/stunnel-5.71-2.el8_10.x86_64 .
