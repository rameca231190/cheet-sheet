sudo yum groupinstall "Development Tools" -y
sudo yum install leptonica leptonica-devel pkgconfig -y
sudo yum install cairo pango icu libicu libicu-devel -y

git clone https://github.com/tesseract-ocr/tesseract.git
cd tesseract

./autogen.sh
./configure
make
sudo make install
sudo ldconfig


--------

curl -O https://dl.fedoraproject.org/pub/epel/8/Everything/x86_64/Packages/t/tesseract-4.1.1-2.el8.x86_64.rpm

https://download.rockylinux.org/pub/rocky/8/AppStream/x86_64/os/Packages/t/tesseract-4.1.1-2.el8.x86_64.rpm

sudo dnf install leptonica leptonica-devel libicu libicu-devel -y


sudo dnf localinstall tesseract-4.1.1-2.el8.x86_64.rpm -y

sudo yum localinstall tesseract-4.1.1-2.el8.x86_64.rpm -y

curl -O https://dl.fedoraproject.org/pub/epel/8/Everything/x86_64/Packages/t/tesseract-langpack-eng-4.1.1-2.el8.noarch.rpm
sudo yum localinstall tesseract-langpack-eng-4.1.1-2.el8.noarch.rpm -y

tesseract --version
